<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/background_gray">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/rv_main">

        <RelativeLayout
            android:id="@+id/rl_container_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/container_card">

            <ImageView
                android:id="@+id/img_main"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/nome_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_main"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:text="Nome do Filme"
                android:textColor="@color/dark_gray"
                android:textSize="25sp"
                />

<!--            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/semibold"
                android:text="2019"
                android:textColor="@color/light_gray"
                android:textSize="20sp" />-->
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_botao_favoritar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/rl_container_img"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_actions"
            android:padding="12dp"
            android:src="@drawable/ic_like" />

    </RelativeLayout>
</android.support.v7.widget.CardView>